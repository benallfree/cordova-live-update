#!/usr/bin/env node

var express = require('express');
express.static.mime.define({
  'application/json': ['json'],
  'application/zip': ['zip'],
});

app = express();
port = process.env.BUNDLE_PORT || 4000;
path = process.env.BUNDLE_TARGET || __dirname + '/liveupdate'
app.use(express.static(path));
app.listen(port);